<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/usualLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:gravity="end"
            android:padding="10dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="70sp" />

        <LinearLayout
            android:id="@+id/firstLineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result"
            android:layout_toLeftOf="@id/actionPanelLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearingBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="C"
                android:textSize="30sp" />

            <Button
                android:id="@+id/plus-minusBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="+/-"
                android:textSize="30sp" />

            <Button
                android:id="@+id/percentBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="%"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstLineLayout"
            android:layout_toLeftOf="@id/actionPanelLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sevenBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eightBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/nineBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="9"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondLineLayout"
            android:layout_toLeftOf="@id/actionPanelLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fourBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/fiveBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/sixBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="6"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthLineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thirdLineLayout"
            android:layout_toLeftOf="@id/actionPanelLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/oneBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/twoBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/threeBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="3"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthLineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fourthLineLayout"
            android:layout_toLeftOf="@id/actionPanelLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zeroBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="20dp"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/decimalPointBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="."
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionPanelLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/result"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/divisionBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorActionPanel"
                android:padding="20dp"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/multiplicationBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorActionPanel"
                android:padding="20dp"
                android:text="*"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/minusBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorActionPanel"
                android:padding="20dp"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plusBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorActionPanel"
                android:padding="20dp"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorActionPanel"
                android:padding="20dp"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/engineerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/resultEng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:gravity="end"
            android:padding="10dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="55sp" />

        <LinearLayout
            android:id="@+id/ingenFirstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resultEng"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/inBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text="In"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/logBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text="log"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/sinBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text="sin"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/cosBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text="cos"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/tgBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text="tg"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ingenSecondLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingenFirstLayout"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/xyBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text="x^y"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/x2Btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text="x^2"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/x-1Btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text="x^-1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/leftBracketBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text="("
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/rightBracketBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:text=")"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstLineEngLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingenSecondLayout"
            android:layout_toLeftOf="@id/actionPanelEngLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearingEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="C"
                android:textSize="30sp" />

            <Button
                android:id="@+id/plus-minusEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="+/-"
                android:textSize="30sp" />

            <Button
                android:id="@+id/percentEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="%"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLineEngLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstLineEngLayout"
            android:layout_toLeftOf="@id/actionPanelEngLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sevenEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eightEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/nineEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="9"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLineEngLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondLineEngLayout"
            android:layout_toLeftOf="@id/actionPanelEngLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fourEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/fiveEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/sixEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="6"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthLineEngLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thirdLineEngLayout"
            android:layout_toLeftOf="@id/actionPanelEngLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/oneEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/twoEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/threeEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="3"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthLineEngLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fourthLineEngLayout"
            android:layout_toLeftOf="@id/actionPanelEngLayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zeroEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10dp"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/decimalPointEngBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="."
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionPanelEngLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingenSecondLayout"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/divisionEngBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:padding="10dp"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/multiplicationEngBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:padding="10dp"
                android:text="*"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/minusEngBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:padding="10dp"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plusEngBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:padding="10dp"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/submitEngBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorIngenPanel"
                android:padding="10dp"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/switchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/swinchBtn"
        android:layout_gravity="center_horizontal|bottom"/>

</FrameLayout>
